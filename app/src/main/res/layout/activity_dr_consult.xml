<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dr_consult_page"
    android:background="@color/blue"
    android:layout_gravity="center"
    tools:context=".dr_consult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include layout="@layout/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/skin"
            android:paddingTop="50sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="40sp"
            android:paddingBottom="50sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <!-- Child's Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Child's Name: "
                    android:textSize="18sp"
                    android:textColor="@color/textcolour"/>

                <EditText
                    android:id="@+id/et_child_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter child's name"
                    android:textColorHint="@color/textcolour"
                    android:textSize="18sp"
                    tools:ignore="TouchTargetSizeCheck"
                    android:visibility="gone"/>

                <Spinner
                    android:id="@+id/spinnerChildName"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <!-- Child's Disorder -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Child's Disorder: "
                    android:textSize="18sp"
                    android:textColor="@color/textcolour"/>

                <EditText
                    android:id="@+id/et_child_disorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter disorder details"
                    android:textColorHint="@color/textcolour"
                    android:textSize="18sp"
                    android:textColor="@color/textcolour"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>




            <!-- Consultation Appointment Date & Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appointment Date: "
                    android:textSize="18sp"
                    android:textColor="@color/textcolour"/>

                <EditText
                    android:id="@+id/et_appointment_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="Select Date"
                    android:textColorHint="@color/textcolour"
                    android:textSize="18sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appointment Time: "
                    android:textSize="18sp"
                    android:textColor="@color/textcolour"/>

                <EditText
                    android:id="@+id/et_appointment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="Select Time"
                    android:textColorHint="@color/textcolour"
                    android:textSize="18sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <!-- Doctor Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor: Dr. Nitin Chavan"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textcolour"
                android:padding="8dp"/>

            <!-- Book Appointment Button -->
            <Button
                android:id="@+id/btn_book_appointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Schedule"
                android:textSize="18sp"
                android:backgroundTint="@color/textcolour"
                android:textColor="@color/skin"
                android:padding="10dp"
                android:layout_marginTop="16dp"/>

            <!-- Reminder -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder: \nPlease arrive on time for your appointment."
                android:textSize="16sp"
                android:textColor="@color/textcolour"
                android:padding="8dp"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/fragment_drawer1"/>
</androidx.drawerlayout.widget.DrawerLayout>