<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:id="@+id/report_drawer"
    tools:context=".report">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include layout="@layout/toolbar"/>

            <!-- Container for weekly reports -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- Week 1 Report Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/textcolour"
                    android:padding="16dp"
                    android:layout_margin="10sp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 Nov- 10Nov"
                        android:textColor="#FFFFFF"
                        android:layout_weight="1"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/reportButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WEEK-1"
                        android:backgroundTint="@color/skin"
                        android:textColor="@color/textcolour"
                        android:textSize="18sp"/>
                </LinearLayout>

                <!-- Week 2 Report Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/textcolour"
                    android:padding="16dp"
                    android:layout_margin="10sp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11 Nov- 17Nov"
                        android:textColor="#FFFFFF"
                        android:layout_weight="1"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/reportButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WEEK-2"
                        android:backgroundTint="@color/skin"
                        android:textColor="@color/textcolour"
                        android:textSize="18sp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    <include layout="@layout/fragment_drawer"/>


</androidx.drawerlayout.widget.DrawerLayout>