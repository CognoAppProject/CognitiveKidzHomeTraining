<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/skin"
    android:scrollbars="vertical"
    tools:context=".FAQsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/faqHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="❓ Frequently Asked Questions"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/textcolour"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:letterSpacing="0.05"
            android:shadowColor="#BBBBBB"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1" />

        <!-- FAQ 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/faq_background"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. What is Cognitive Kidz Home Training App?"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textcolour1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="It’s a personalized skill enhancement platform for children."
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- FAQ 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/faq_background"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. How can I change my child’s profile?"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textcolour1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go to the Profile tab and tap on Edit Profile."
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- FAQ 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/faq_background"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. How do I reach support?"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textcolour1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Use the 'Contact Us' option in Settings."
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- FAQ 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/faq_background"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Is my data safe?"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textcolour1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Absolutely. We follow all data protection guidelines."
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- FAQ 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/faq_background"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. How do I track my child’s progress?"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textcolour1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go to the Dashboard section to see detailed progress reports and insights."
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- FAQ 6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/faq_background"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Can I set learning goals for my child?"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textcolour1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes, you can customize goals in the Goals tab under your child's profile."
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- FAQ 7 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/faq_background"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. Are there any subscription plans?"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textcolour1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes, we offer monthly and annual plans with free trials for new users."
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- FAQ 8 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/faq_background"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8. What age group is this app suitable for?"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textcolour1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cognitive Kidz is designed for children aged 4 to 12 years."
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
