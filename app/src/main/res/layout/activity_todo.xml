<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skin"
    android:id="@+id/todo_drawer"
    tools:context=".todo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>
    <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3F51B5"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your tasks for the day"
                android:textColor="#D1C4E9"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>

    <!-- Assigned Dates Info -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@color/skin"
            android:padding="12dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/assigned_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assigned Dates:"
                android:textColor="@color/textcolour"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium" />
        </ScrollView>

        <!-- To-Do List -->
        <ListView
            android:id="@+id/todo_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:padding="8dp"
            android:clipToPadding="false"
            android:elevation="1dp" />

        <!-- Footer Message -->
        <TextView
            android:id="@+id/footer_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You're all caught up! ðŸŽ‰"
            android:textSize="16sp"
            android:textColor="#4CAF50"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="#E8F5E9"
            android:layout_marginTop="12dp"
            android:elevation="2dp"
            android:visibility="gone" />

</LinearLayout>
    <include layout="@layout/fragment_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>

