<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A7C7E7"
    android:id="@+id/drawer_academic_activity"
    tools:context=".academic_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include layout="@layout/toolbar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Task 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:background="@color/skin"
                            android:padding="16dp"
                            android:id="@+id/numbers"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Task 1 :"
                                android:layout_gravity="center"
                                android:textColor="@color/textcolour"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Learn Numbers"
                                android:id="@+id/number_game"
                                android:layout_gravity="center"
                                android:textSize="18sp"
                                android:textColor="@color/textcolour"
                                android:paddingTop="8dp" />

                            <ImageView
                                android:id="@+id/number_image"
                                android:layout_width="177sp"
                                android:layout_height="159sp"
                                android:layout_gravity="center"
                                android:contentDescription="Learn Numbers Image"
                                android:paddingTop="12sp"
                                android:src="@drawable/numbers" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Task 2 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:background="@color/skin"
                            android:id="@+id/words"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Task 2 :"
                                android:layout_gravity="center"
                                android:textColor="@color/textcolour"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Learn Words"
                                android:id="@+id/words_game"
                                android:layout_gravity="center"
                                android:textSize="18sp"
                                android:textColor="@color/textcolour"
                                android:paddingTop="8dp" />

                            <ImageView
                                android:id="@+id/words_image"
                                android:layout_width="177sp"
                                android:layout_height="159sp"
                                android:layout_gravity="center"
                                android:contentDescription="Learn Words Image"
                                android:paddingTop="12sp"
                                android:src="@drawable/words" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Task 3 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:background="@color/skin"
                            android:padding="16dp"
                            android:id="@+id/colours">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Task 3 :"
                                android:textColor="@color/textcolour"
                                android:textSize="20sp"
                                android:layout_gravity="center"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Learn Colors"
                                android:id="@+id/colors_game"
                                android:layout_gravity="center"
                                android:textSize="18sp"
                                android:textColor="@color/textcolour"
                                android:paddingTop="8dp" />

                            <ImageView
                                android:id="@+id/colors_image"
                                android:layout_width="177sp"
                                android:layout_height="159sp"
                                android:layout_gravity="center"
                                android:contentDescription="Learn Colors Image"
                                android:paddingTop="12sp"
                                android:src="@drawable/colors" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Task 4 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:background="@color/skin"
                            android:padding="16dp"
                            android:id="@+id/shapes">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Task 4:"
                                android:textColor="@color/textcolour"
                                android:layout_gravity="center"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Learn Shapes"
                                android:id="@+id/shapes_game"
                                android:layout_gravity="center"
                                android:textSize="18sp"
                                android:textColor="#000000"
                                android:paddingTop="8dp" />

                            <ImageView
                                android:id="@+id/shapes_image"
                                android:layout_width="177sp"
                                android:layout_height="159sp"
                                android:layout_gravity="center"
                                android:contentDescription="Learn Shapes Image"
                                android:paddingTop="12sp"
                                android:src="@drawable/shapes" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Task 5 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:background="@color/skin"
                            android:padding="16dp"
                            android:id="@+id/sequence">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Task 5:"
                                android:layout_gravity="center"
                                android:textColor="@color/textcolour"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Learn Sequence"
                                android:id="@+id/sequnce_game"
                                android:layout_gravity="center"
                                android:textSize="18sp"
                                android:textColor="@color/textcolour"
                                android:paddingTop="8dp" />

                            <ImageView
                                android:id="@+id/sequence_image"
                                android:layout_width="177sp"
                                android:layout_height="159sp"
                                android:layout_gravity="center"
                                android:contentDescription="Learn Seqeunce Image"
                                android:paddingTop="12sp"
                                android:src="@drawable/sequence" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/fragment_drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>