<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".myActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include layout="@layout/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/skin"
            android:orientation="vertical"
            android:layout_margin="20sp"
            android:padding="16dp">

            <!-- App bar -->

            <!-- Activity list container -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Card for each activity -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@android:color/white"
                        android:elevation="4dp"
                        android:layout_margin="8dp"
                        android:padding="16dp"
                        android:backgroundTint="#e0f7fa">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Therapy Session"
                            android:textSize="20sp"
                            android:textColor="@color/textcolour"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date: 2nd Nov"
                            android:textColor="@color/textcolour"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time: 10 AM"
                            android:textColor="@color/textcolour"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duration: 1 hrs"
                            android:textColor="@color/textcolour"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attended"
                            android:textStyle="bold"
                            android:textColor="#16A89A"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <!-- Second card for another activity -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@android:color/white"
                        android:elevation="4dp"
                        android:layout_margin="8dp"
                        android:padding="16dp"
                        android:backgroundTint="#e0f7fa">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shape Sorter"
                            android:textSize="20sp"
                            android:textColor="@color/textcolour"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date: 3rd Nov"
                            android:textColor="@color/textcolour"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time: 2PM-3PM"
                            android:textColor="@color/textcolour"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time Taken: 1 hr 45 min"
                            android:textColor="@color/textcolour"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Score: 7"
                            android:textColor="#16A89A"
                            android:textStyle="bold"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <!--Third card of consultaion with docter-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@android:color/white"
                        android:elevation="4dp"
                        android:layout_margin="8dp"
                        android:padding="16dp"
                        android:backgroundTint="#e0f7fa">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Parent's Consults Doctor"
                            android:textSize="20sp"
                            android:textColor="@color/textcolour"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date: 9th Nov"
                            android:textColor="@color/textcolour"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time: 11AM-12PM"
                            android:textColor="@color/textcolour"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doctor's Guidance on Parent's concern"
                            android:textColor="@color/textcolour"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
        <include layout="@layout/fragment_drawer"/>
    </androidx.drawerlayout.widget.DrawerLayout>