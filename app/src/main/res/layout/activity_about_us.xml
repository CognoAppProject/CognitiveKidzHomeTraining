<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skin"
    android:padding="20dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/aboutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/textcolour"
            android:layout_marginBottom="16dp" />

        <!-- App Logo -->
        <ImageView
            android:id="@+id/aboutLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/newicon"
            android:layout_marginBottom="20dp"
            android:contentDescription="App Logo" />

        <!-- Description -->
        <TextView
            android:id="@+id/aboutDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black3"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:background="@drawable/faq_background"
            android:padding="16dp"
            android:elevation="2dp"
            android:text="📱 About Cognitive Kidz Home Training App v1.3.5\n\n🧠 Cognitive Kidz Home Training is a fun and interactive learning platform designed to support children's cognitive development at home. Our app empowers parents and educators with engaging activities that help kids improve their memory, focus, logic, and problem-solving skills—all through play!\n\n🎮 From colorful games and brain-boosting puzzles to structured training sessions, we provide a comprehensive learning experience for kids in the comfort of their own home. Whether it's strengthening early math skills or enhancing attention span, our app brings quality cognitive training right to your fingertips.\n\n🌟 Imagine your child mastering new skills while enjoying every moment of it—on the sofa, at the dining table, or even on the go.\n\n🎯 Our mission is to make cognitive development accessible, enjoyable, and personalized for every child, everywhere.\n\n👨‍🏫 Cognitive Kidz Home Training is owned and developed by a passionate team of educators, psychologists, and developers dedicated to making learning meaningful." />

        <!-- Version Info -->
        <TextView
            android:id="@+id/appVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.3.5"
            android:textStyle="italic"
            android:textColor="@color/textcolour3"
            android:textSize="14sp"
            android:layout_marginTop="24dp" />

        <!-- Credits -->
        <TextView
            android:id="@+id/creditsText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/black3"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/faq_background"
            android:padding="12dp"
            android:lineSpacingExtra="4dp"
            android:text= "© 2025 Cognitive Kidz Team\nDesigned and developed with love for children."/>

        <TextView
            android:id="@+id/creditsText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/black3"
            android:textSize="14sp"
            android:background="@drawable/faq_background"
            android:padding="12dp"
            android:lineSpacingExtra="4dp"
            android:text="For support, visit the Help and Support section or contact us at:\nsupport@cognitivekidz.com" />

    </LinearLayout>
</ScrollView>
